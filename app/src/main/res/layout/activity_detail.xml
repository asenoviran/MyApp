<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E8D8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Картинка книги -->
        <ImageView
            android:id="@+id/imageBook"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#D9CBB6"
            android:scaleType="centerCrop" />

        <!-- Название книги -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:layout_marginTop="12dp"
            android:text="Название книги" />

        <!-- Автор + Жанр -->
        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автор • Жанр"
            android:layout_marginTop="8dp"
            android:textColor="#8B5E3C"
            android:textSize="16sp" />

        <!-- Описание -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="#3E2723"
            android:lineSpacingExtra="4dp"
            android:text="Описание книги..." />

        <!-- Рейтинг -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginTop="16dp" />

        <!-- Комментарий -->
        <EditText
            android:id="@+id/editComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш комментарий..."
            android:minHeight="100dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:padding="12dp" />

        <!-- Кнопка 'Избранное' -->
        <Button
            android:id="@+id/buttonFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в избранное"
            android:textColor="@android:color/white"
            android:backgroundTint="#8B5E3C"
            android:layout_marginTop="12dp" />

        <!-- Кнопка 'Сохранить' -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:textColor="@android:color/white"
            android:backgroundTint="#6D4C41"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить книгу"
            android:textColor="@android:color/white"
            android:backgroundTint="#6D4C41"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />



    </LinearLayout>
</ScrollView>

